---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Hobbies from "../components/Hobbies.astro";
import CTA from "../components/CTA.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <header>
    <Hero />
  </header>
  <main>
    <div id="container">
      <section id="experience">
        <Experience />
      </section>
      <section id="projects">
        <Projects />
      </section>
      <section id="hobbies">
        <Hobbies />
      </section>
      <section id="contact">
        <CTA />
      </section>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  #container {
    background-color: transparent;
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  #container section {
    width: 100%;
  }

  #container iframe {
    margin-bottom: 20px;
  }

  #bands-in-town {
    width: 100%;
    margin-top: 20px;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 12px;
    padding: 20px;
    color: white;
  }

  #bands-in-town h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #1db954;
    font-size: 2rem;
  }

  header {
    position: relative;
  }
</style>
